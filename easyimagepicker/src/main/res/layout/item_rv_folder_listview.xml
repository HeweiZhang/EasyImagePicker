<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="0.8dp"
    android:paddingTop="@dimen/y5"
    android:paddingBottom="@dimen/y5"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_folders_icon"
        android:layout_width="@dimen/y44"
        android:layout_height="@dimen/y44"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/x10"
        android:src="@drawable/default_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/x10"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/all_images"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_image_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="共0张"
            android:textColor="#d2d2d7"
            android:textSize="14sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_folder_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/list_selected"/>
</LinearLayout>